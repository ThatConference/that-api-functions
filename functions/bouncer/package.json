{
  "name": "that-starter-function",
  "version": "0.1.0",
  "description": "a function to start out with when building new functions in this repo",
  "main": "index.js",
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__",
    "predeploy:api:bouncer": "npm run build",
    "deploy:api:bouncer": "functions-framework --target=handler --port=9090 --source=./__build__",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:api:bouncer",
    "test": "jest --coverage --passWithNoTests",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThatConference/that-api-functions.git"
  },
  "keywords": [
    "slack",
    "webhook",
    "rollup",
    "nodejs"
  ],
  "author": "THAT Conference",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ThatConference/that-api-functions/issues"
  },
  "homepage": "https://github.com/ThatConference/that-api-functions#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@google-cloud/functions-framework": "^1.7.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.4",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^2.7.0",
    "@sentry/node": "^5.29.0",
    "connect": "^3.7.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.1",
    "response-time": "^2.3.2",
    "stripe": "^8.127.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    },
    "jest": {
      "testEnvironment": "node",
      "verbose": true,
      "rootDir": "./src",
      "coverageDirectory": "../__testCoverage__"
    }
  }
}
